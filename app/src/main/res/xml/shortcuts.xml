    <shortcut
            android:shortcutId="shortcut1"
            android:enabled="true"
            android:icon="@drawable/run"
            android:shortcutShortLabel="@string/shortcut1_short"
            android:shortcutLongLabel="@string/shortcut1_long">
        <!-- targetClass指定了点击该项菜单后要打开哪个活动页面 -->
        <intent
                android:action="android.intent.action.VIEW"
                android:targetPackage="mao.cartoonapp"
                android:targetClass="mao.cartoonapp.FavoritesActivity">

            <categories android:name="android.shortcut.conversation" />

        </intent>

    </shortcut>


